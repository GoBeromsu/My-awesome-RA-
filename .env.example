# My Awesome RA - Environment Variables
# Copy this file to .env and fill in your values

# Required: Upstage SOLAR API Key
UPSTAGE_API_KEY=your_api_key_here

# Optional: API Base URL (default: https://api.upstage.ai/v1/solar)
# UPSTAGE_API_BASE_URL=https://api.upstage.ai/v1/solar

# Optional: Embedding model (default: solar-embedding-1-large-query)
# EMBEDDING_MODEL=solar-embedding-1-large-query

# Optional: Database path (default: data/my_awesome_ra.db)
# DATABASE_PATH=data/my_awesome_ra.db

# Optional: Vector store path (default: data/vectors)
# VECTOR_STORE_PATH=data/vectors

# Optional: Chunk configuration
# CHUNK_SIZE=500
# CHUNK_OVERLAP=100

# Optional: Retrieval configuration
# SIMILARITY_THRESHOLD=0.7
# TOP_K_RESULTS=5

# Optional: Log level (default: INFO)
# LOG_LEVEL=INFO
